<script type="text/javascript">
function todayIs() {
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth()+1; // Jan is 0
    var yyyy = today.getFullYear();

    if(dd<10){
        dd = '0'+dd
    }
    if(mm<10){
        mm = '0'+mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    
    document.getElementById("currentDate").value = document.write(today);
}
</script>
</head>
